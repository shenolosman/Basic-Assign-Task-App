@model AppUserAddViewModel
@{
    ViewData["Title"] = "Register";
}

<h1  class="w-50 mx-auto">Register User</h1>

<form class="w-50 mx-auto shadow" method="post" style="padding: 10px 10px">
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="Name" class="form-label"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" type="text" class="form-control"/>
    </div>
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="Surname" class="form-label"></label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" type="text" class="form-control"/>
    </div>
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="Username" class="form-label"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" type="text" class="form-control"/>
    </div>
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="Email" class="form-label"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" type="text" class="form-control"/>
    </div>
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="Password" class="form-label"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" type="text" class="form-control"/>
    </div>
    <div class="mb-2" style="padding: 0 10px">
        <label asp-for="RePassword" class="form-label"></label>
        <span asp-validation-for="RePassword" class="text-danger"></span>
        <input asp-for="RePassword" type="text" class="form-control"/>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary btn-block">Create</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}