@model List<MyTaskAllListViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Count == 0)
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            There is no task!
        </p>
    </div>
}
else
{
    <table class="table table-sm table-hover w-75 mx-auto mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreatedTime</th>
                <th>StateOfUrgent</th>
                <th>AppUser</th>

                <th>Reports</th>
                <th>Do!</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedTime.ToString("D")</td>
                    <td>@item.StateOfUrgent.Type</td>
                    <td>
                        @if (item.AppUser == null)
                        {
                            <span class="badge badge-danger">No User</span>
                        }
                        else
                        {
                            <span class="badge badge-success">@item.AppUser.Name</span>
                        }
                    </td>
                    <td>@item.Rapports.Count</td>
                    <td>
                            @if (item.AppUser == null)
                            {
                            <a asp-controller="Assignment" asp-action="AssignUser" class="btn btn-outline-success btn-sm" asp-route-id="@item.Id">Assign User</a>
                            }
                            else
                            {
                            <a asp-controller="Assignment" asp-action="Detail" class="btn btn-outline-success btn-sm" asp-route-id="@item.Id">Detail</a>
                            }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
