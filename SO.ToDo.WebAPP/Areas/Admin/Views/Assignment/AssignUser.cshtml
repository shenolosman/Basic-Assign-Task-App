@model MyTaskListViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row mt-2">
    <div class="col-md-4 pt-3">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center lead">Task information</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <strong>State: </strong><span class="badge badge-info">@Model.StateOfUrgent.Type</span>
                </p>
                <p class="card-text"><small>@Model.CreatedTime.ToString("D")</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        

        @foreach (var item in (List<AppUserListViewModel>) ViewBag.Users)
        {
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@item.Picture" alt="@item.UserName" class="card-img"/>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                @item.Name @item.SurName
                            </h5>
                            <p class="card-text">
                                @{

                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <nav aria-label="Page navigation ">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.AllPage; i++)
                {
                    <li class="page-item @(ViewBag.ActivePage == i ? "active" : "")">
                        <a asp-action="AssignUser" asp-route-id="@Model.Id" asp-route-page="@i" class="page-link">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>