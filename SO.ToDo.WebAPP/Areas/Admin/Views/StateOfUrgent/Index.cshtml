@model List<StateOfUrgentListViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>State of urgent</h1>


@if (Model.Count > 0)
{
    <a asp-action="Add" asp-controller="StateOfUrgent" class="btn btn-sm btn-info my-2">Add new</a>
    <table class="table table-sm table-hover w-50 mx-auto">
        <thead>
            <tr>
                <th>Type</th>
                <th>Do!</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>
                        <a asp-controller="StateOfUrgent" asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">No Item to show</p>
        <a asp-action="Add" asp-controller="StateOfUrgent" class="btn btn-sm btn-info my-2">Add new</a>
    </div>

}