@model List<MyTaskListViewModel>
@{
    ViewBag.Title = "Mytask Index";
}

<h1>My Task Index</h1>
@if (Model.Count == 0)
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            There is no task!
        </p>
        <a asp-action="Add" class="btn btn-primary">Create</a>
    </div>
}
else
{
    <a asp-action="Add" class="btn btn-primary">Create</a>
    <table class="table table-sm table-hover w-75 mx-auto">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreatedTime</th>
                <th>StateOfUrgent</th>
                <th>Do!</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedTime.ToString("D")</td>
                    <td>@item.StateOfUrgent.Type</td>

                    <td>
                        <a asp-controller="MyTask" asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id">Edit</a> |
                        <a href="/MyTask/Delete/@item.Id" data-toggle="modal" data-target="#DeleteModal" class="btn btn-outline-danger" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <!-- Modal -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Warning!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure to delete that task?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="btnDeleteTask">Delete</button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
<script type="text/javascript">
    $(document).ready(function() {
        $("#DeleteModal").on("show.bs.modal", function(event) {
                var button = $(event.relatedTarget);
                var ida = button.data('id');
                $("#btnDeleteTask").click(function() {
                    $.ajax({
                        type: "Get",
                        url: "./MyTask/Delete",
                        data: { id: ida },
                        dataType: "json",
                        contentType: "application/json; charset=utf-8;",
                        success: function() {
                            window.location.reload();
                        },
                        error: function(error) {
                            alert(error.statusText);
                        }
                });
                });
            });
    });
</script>
}


}