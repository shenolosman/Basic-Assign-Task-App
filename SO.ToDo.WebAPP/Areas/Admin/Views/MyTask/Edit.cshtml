@model MyTaskUpdateDto
@{
    ViewBag.Title="Edit Task";
}

<h1>Edit</h1>

<form class="w-50 mx-auto" method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-5">
        <label asp-for="Title" class="form-label col-form-label-lg"></label>
        <span asp-validation-for="Title" class="text-danger"></span>
        <input asp-for="Title" type="text" class="form-control form-control-lg"/>
    </div>

    <div class="mb-5">
        <label asp-for="Description" class="form-label col-form-label-lg"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description" type="text" class="form-control form-control-lg"></textarea>
    </div>

    <div class="mb-5">
        <label asp-for="StateOfUrgentId" class="form-label col-form-label-lg"></label>
        <span asp-validation-for="StateOfUrgentId" class="text-danger"></span>
        <select asp-for="StateOfUrgentId" class="form-control form-control-lg"  asp-items="ViewBag.State">
            <option  hidden="true"  value="-1">Select</option>
        </select>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary btn-lg">Edit <i class="fa fa-save" aria-hidden="true"></i></button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
