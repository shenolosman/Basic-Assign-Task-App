@model List<NotificationListViewModel>
@{
    ViewData["Title"] = "GetNotification";
}
<h1>Notification</h1>

@if (Model.Count == 0)
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            There is no Notification!
        </p>
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="alert alert-dark p-3 my-2">
            <form method="post" class="my-1 w-75">
                <p class="lead">
                    <input type="hidden" name="id" value="@item.Id" />
                    <strong>@item.Comment</strong>
                    <button type="submit" class="btn btn-warning float-right">Mark as Read</button>
                </p>
            </form>
        </div>
    }
}