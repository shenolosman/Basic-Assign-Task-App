@model List<MyTaskAllListViewModel>
@{
    ViewData["Title"] = "Index";
    var count = 0;
}

@foreach (var item in Model)
{
    count++;
    <div class="card my-1">
        <div class="card-header">
            <h4 class="text-center lead">@item.Title</h4>
        </div>

        <div class="card-body">
            <h5 class="card-title"><strong>State: </strong><span class="badge badge-info">@item.StateOfUrgent.Type</span></h5>
            <p class="card-text">@item.Description</p>
            <p class="text-right">
                @if (item.Rapports.Count > 0)
                {
                    <a class="btn btn-light" data-toggle="collapse" href="#collapseReport-@count" role="button" aria-expanded="false" aria-controls="collapseReport">
                        <i class="fa fa-arrow-down"></i> Reports <span class="badge badge-dark"> @item.Rapports.Count</span>
                    </a>
                }
                else
                {
                    <span class="lead font-weight-bold font-italic p-2 d-block mb-2">Please write report</span>
                    <a asp-area="Member" asp-controller="Home" asp-action="AddTaskReport" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-page4"></i> Write Reports</a>
                }
                <a href="" class="btn btn-primary"><i class="fa fa-marker"></i> Mark as completed</a>
            </p>
            <div class="collapse" id="collapseReport-@count">
                <a asp-area="Member" asp-controller="Home" asp-action="AddTaskReport" asp-route-id="@item.Id" class="btn btn-primary m-1"><i class="fa fa-save"></i> Write Reports</a>
                <table class="table table-hover table-bordered table-sm">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Do!</th>
                    </tr>

                    @foreach (var rapport in item.Rapports)
                    {
                        <tr>
                            <td>@rapport.Defination</td>
                            <td>@rapport.Details</td>
                            <td><a asp-area="Member" asp-controller="Home" asp-action="EditTasksRapport" asp-route-id="@rapport.Id" class="btn btn-warning">Edit</a></td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
}