@{
    ViewData["Title"] = "Index";
}
<h1 class=" text-center">Statistic</h1>
<hr class="collapse-horizontal" />
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title text-white">Must Complete Tasks</h4>
                @if (ViewBag.MustCompleteTaskCount > 0)
                {
                    <p class="card-text display-4 text-center text-white">@ViewBag.MustCompleteTaskCount</p>
                    <a asp-area="Member" asp-controller="Assign" asp-action="Index" class="text-white">
                        <i class="fas fa-chevron-circle-right"></i> See More...
                    </a>
                }
                else
                {
                    <p class="lead card-text text-white">No task!</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title text-white">Completed Task Count</h4>
                @if (ViewBag.CompletedTaskCount > 0)
                {
                    <p class="card-text display-4 text-center text-white">@ViewBag.CompletedTaskCount</p>
                    <a asp-area="Member" asp-controller="Task" asp-action="DoneTasks" class="text-white">
                        <i class="fas fa-chevron-circle-right"></i> See More...
                    </a>
                }
                else
                {
                    <p class="lead card-text text-white">No task is done yet!</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title text-white">Reports count</h4>
                @if (ViewBag.ReportCount > 0)
                {
                    <p class="card-text display-4 text-center text-white">@ViewBag.ReportCount</p>
                }
                else
                {
                    <p class="lead card-text text-white">No written report!</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title text-white">Notifications Count</h4>
                @if (ViewBag.NotReadNotificationCount > 0)
                {
                    <p class="card-text display-4 text-center text-white">@ViewBag.NotReadNotificationCount</p>
                    <a asp-area="Member" asp-controller="Notification" asp-action="GetNotification" class="text-white">
                        <i class="fas fa-chevron-circle-right"></i> See More...
                    </a>
                }
                else
                {
                    <p class="lead card-text text-white">All notifications read!</p>
                }
            </div>
        </div>
    </div>
</div>

